<h1><%= @band.name() %></h1>

<h3>Select all venues where this band has played:</h3

<% if @venues.any?() %>
  <form action="/bands/<%= @band.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <% @venues.each() do |venue| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="venue_id[]" value="<%= venue.id() %>"><%= venue.location() %>
        </label>
      </div>
    <% end %>
      <button type="submit">Add venues!</button>
  </form>
<% end %>

</br></br>

<% if @band.venues().any?() %>
<h3>Here are all the venues for this band:</h3>

  <ul>
    <% @band.venues().each() do |venue| %>
      <li><%= venue.location() %></li>
    <% end %>
  </ul>

<% else %>
  <p>Uh-oh! This band does not have any venues yet</p>
<% end %>

<a href='/'>Return to Home</a>
